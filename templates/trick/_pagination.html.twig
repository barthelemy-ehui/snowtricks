
<div class="container">
    <div class="row">
        <div class="col mx-auto col-md-auto col-sm-auto col-lg-auto">
            {% set pageLength = (tricks.count()/15)|round(0, 'ceil') %}
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item {{ currentPage == 1 ? 'disabled':'' }}"><a class="page-link" href="{{ path('trick', {page: currentPage - 1 }) }}">Précédent</a></li>
            {% for p in 1..pageLength %}
                    <li class="page-item {{ p == currentPage ? 'active':'' }}"><a class="page-link" href="{{ path('trick',{page: p}) }}">{{ p }}</a></li>
            {% endfor %}
                    <li class="page-item {{ currentPage == pageLength ? 'disabled':'' }}"><a class="page-link" href="{{ path('trick', {page: currentPage + 1 }) }}">Suivant</a></li>
                </ul>
            </nav>

        </div>
    </div>
</div>